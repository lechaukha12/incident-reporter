FROM nginx:alpine

# Sao chép tệp HTML tĩnh
COPY ./src/index.html /usr/share/nginx/html/index.html
COPY ./src/incident-detail.html /usr/share/nginx/html/incident-detail.html
COPY ./src/dashboard.html /usr/share/nginx/html/dashboard.html
COPY ./src/users.html /usr/share/nginx/html/users.html
COPY ./src/api-test-standalone.html /usr/share/nginx/html/api-test.html
COPY ./src/connection-test.html /usr/share/nginx/html/connection-test.html
COPY ./src/chart-test.html /usr/share/nginx/html/chart-test.html

# Cấu hình Nginx
COPY ./nginx.conf /etc/nginx/conf.d/default.conf

EXPOSE 80

CMD ["nginx", "-g", "daemon off;"]
